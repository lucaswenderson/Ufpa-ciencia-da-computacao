  x.append(int(input()))
print("Menor valor:", min(x))
print("Posicao:", x.index(min(x)))
'''

qte = int(input())
lista = list(map(int,input().split()))
posicao = 0
menor = lista[0]
count = 0
for v in lista:
    if(v < menor):
        menor = v
        posicao = count
    count += 1
    
print("Menor valor: %d" %menor)
print("Posicao: %d" %posicao)